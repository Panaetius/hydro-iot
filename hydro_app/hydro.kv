#:kivy 2.0.0
#:include hydro_app/gauge.kv

<HydroIoT>:
    orientation: "vertical"
    HydroScreenManager:
        id: sm
        MainScreen:
        ControlScreen:
        SettingsScreen:
    BoxLayout:
        orientation:"horizontal"
        size_hint_y: 0.1
        Button:
            text: "Values"
            font_size:'40sp'
            on_release:
                app.root.ids.sm.switch_screen("values")
        Button:
            text: "Control"
            font_size:'40sp'
            on_release:
                app.root.ids.sm.switch_screen("control")
        Button:
            text: "Settings"
            font_size:'40sp'
            on_release:
                app.root.ids.sm.switch_screen("settings")

<MainScreen>:
    id: values_screen
    name: "values"
    # temperature: temperature
    # ph: ph
    # ec: ec
    # pressure: pressure
    GridLayout:
        rows: 4
        cols: 2
        padding: 10
        spacing: 10
        Label:
            font_size:'40sp'
            text: "Temperature"
        DialGauge:
            id: temperature
            current_value: root.temperature
            suffix: " °C"
            min_value: 10
            max_value: 30
            min_ok_value: 15
            max_ok_value: 26
        Label:
            font_size:'40sp'
            text: "PH"
        DialGauge:
            id: ph
            current_value: root.ph
            min_value: 4
            max_value: 8
            min_ok_value: root.min_ph
            max_ok_value: root.max_ph
        Label:
            font_size:'40sp'
            text: "EC"
        DialGauge:
            id: ec
            current_value: root.ec
            suffix: " µS/m"
            min_value: 0
            max_value: 2000
            min_ok_value: root.min_ec
            max_ok_value: root.max_ec
        Label:
            font_size:'40sp'
            text: "Pressure"
        DialGauge:
            id: pressure
            current_value: root.pressure
            suffix: " Bar"
            min_value: 0
            max_value: 15
            min_ok_value: root.min_pressure
            max_ok_value: root.max_pressure

<ControlScreen>:
    name: "control"
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            cols: 1
            id: layout
            padding: 10
            spacing: 10
            size_hint_y: None
            height: self.minimum_height
            row_default_height: "80dp"
            BoxLayout:
                orientation: "horizontal"
                Button:
                    id: pause_start_button
                    text:root.pause_button_text
                    font_size:'40sp'
                    on_release: root.pause_button_click()
                Button:
                    id: spray_button
                    text:"Spray Boxes"
                    font_size:'40sp'
                    on_release: root.spray_boxes_click()
            BoxLayout:
                orientation: "horizontal"
                Button:
                    id: ph_up_button
                    text:"pH up"
                    font_size:'40sp'
                    on_release: root.ph_up_click()
                Button:
                    id: ph_down_button
                    text:"pH down"
                    font_size:'40sp'
                    on_release: root.ph_down_click()
            BoxLayout:
                orientation: "horizontal"
                Button:
                    id: ec_up_button
                    text:"EC up"
                    font_size:'40sp'
                    on_release: root.ec_up_click()
                Button:
                    id: ec_down_button
                    text:"EC down"
                    font_size:'40sp'
                    on_release: root.ec_down_click()
            BoxLayout:
                orientation: "horizontal"
                Button:
                    id: empty_tank_button
                    text:"Empty Tank"
                    font_size:'40sp'
                    on_release: root.empty_tank_click()
                Button:
                    id: pressure_up_button
                    text:"Pressure up"
                    font_size:'40sp'
                    on_release: root.pressure_up_click()
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Boxes"
                    font_size:'40sp'
                BoxLayout:
                    orientation: "horizontal"
                    Label:
                        text: "1"
                        font_size:'30sp'
                    CheckBox:
                        id: box1_status
                        active: True
                    Label:
                        text: "2"
                        font_size:'30sp'
                    CheckBox:
                        id: box2_status
                        active: True
                    Label:
                        text: "3"
                        font_size:'30sp'
                    CheckBox:
                        id: box3_status
                        active: True
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Spray Interval"
                    font_size:'40sp'
                Slider:
                    id: spray_interval
                    min: 1
                    max: 30
                    value: root.spray_interval
                    step: 0.5
                    size_hint_x: 0.9
                Label:
                    text: str(spray_interval.value)
                    size_hint_x: 0.1
                    font_size:'30sp'
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Spray Duration (ms)"
                    font_size:'40sp'
                    size_hint_x: 1
                Slider:
                    id: spray_duration
                    min: 250
                    max: 15000
                    value: root.spray_duration
                    step: 50
                    size_hint_x: 0.9
                Label:
                    text: str(spray_duration.value)
                    size_hint_x: 0.1
                    font_size:'30sp'
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Target pH"
                    font_size:'40sp'
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation:"horizontal"
                        Label:
                            text: "min"
                            font_size:'30sp'
                            size_hint_x: 0.1
                        Slider:
                            id: ph_min
                            min: 5
                            max: ph_max.value
                            value: root.min_ph
                            step: 0.05
                            size_hint_x: 0.8
                        Label:
                            text: str(ph_min.value)
                            size_hint_x: 0.1
                            font_size:'30sp'
                    BoxLayout:
                        orientation:"horizontal"
                        Label:
                            text: "max"
                            font_size:'30sp'
                            size_hint_x: 0.1
                        Slider:
                            id: ph_max
                            min: ph_min.value
                            max: 7
                            value: root.max_ph
                            step: 0.05
                            size_hint_x: 0.8
                        Label:
                            text: str(ph_max.value)
                            size_hint_x: 0.1
                            font_size:'30sp'
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Target EC"
                    font_size:'40sp'
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation:"horizontal"
                        Label:
                            text: "min"
                            font_size:'30sp'
                            size_hint_x: 0.1
                        Slider:
                            id: ec_min
                            min: 800
                            max: ec_max.value
                            value: root.min_ec
                            step: 100
                            size_hint_x: 0.8
                        Label:
                            text: str(ec_min.value)
                            size_hint_x: 0.1
                            font_size:'30sp'
                            size: self.texture_size
                    BoxLayout:
                        orientation:"horizontal"
                        Label:
                            text: "max"
                            font_size:'30sp'
                            size_hint_x: 0.1
                        Slider:
                            id: ec_max
                            min: ec_min.value
                            max: 2500
                            value: root.max_ec
                            step: 100
                            size_hint_x: 0.8
                        Label:
                            text: str(ec_max.value)
                            size_hint_x: 0.1
                            font_size:'30sp'
                            size: self.texture_size
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Pressure"
                    font_size:'40sp'
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation:"horizontal"
                        Label:
                            text: "min"
                            font_size:'30sp'
                            size_hint_x: 0.1
                        Slider:
                            id: pressure_min
                            min: 4
                            max: pressure_max.value
                            value: root.min_pressure
                            step: 0.25
                            size_hint_x: 0.8
                        Label:
                            text: str(pressure_min.value)
                            size_hint_x: 0.1
                            font_size:'30sp'
                    BoxLayout:
                        orientation:"horizontal"
                        Label:
                            text: "max"
                            font_size:'30sp'
                            size_hint_x: 0.1
                        Slider:
                            id: pressure_max
                            min: pressure_min.value
                            max: 10
                            value: root.max_pressure
                            step: 0.25
                            size_hint_x: 0.8
                        Label:
                            text: str(pressure_max.value)
                            size_hint_x: 0.1
                            font_size:'30sp'
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Picture Interval"
                    font_size:'40sp'
                Slider:
                    id: picture_interval
                    min: 5
                    max: 60
                    value: root.picture_interval
                    step: 5
                    size_hint_x: 0.9
                Label:
                    text: str(picture_interval.value)
                    size_hint_x: 0.1
                    font_size:'30sp'

            Button:
                text: "Update Parameters"
                font_size:'40sp'
                on_release: root.update_parameters_click()


<SettingsScreen>:
    id: settings_screen
    name: "settings"
    GridLayout:
        id: layout
        rows: 4
        cols: 2
        padding: 10
        spacing: 10
        Label:
            font_size:'40sp'
            text: "Host"
        TextInput:
            font_size:'40sp'
            id: host_field
            multiline: False
            text: root.host
            on_text: root.host = self.text
        Label:
            font_size:'40sp'
            text: "User"
        TextInput:
            font_size:'40sp'
            id: user_field
            multiline: False
            text: root.user
            on_text: root.user = self.text
        Label:
            font_size:'40sp'
            text: "Password"
        TextInput:
            font_size:'40sp'
            id: password_field
            multiline: False
            password: True
            text: root.password
            on_text: root.password = self.text
        Label:
            font_size:'40sp'
            text: ""
        Button:
            text: "Save"
            font_size:'40sp'
            on_release: root.save_settings()
